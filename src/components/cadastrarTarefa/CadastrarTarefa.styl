.container-task
   display: none;
   z-index: 100;
.active
   display: flex;
   

#container-tarefa
   background-color: #FFFFFF;
   border-radius: 8px;
   position: fixed;
   margin: auto;
   top: 0;
   bottom: 0;
   left: 0;
   right: 0;
   
   width: 660px;
   height: 488px;
   padding: 34px 42px 37px 40px;
   .adicionar-tarefa
      position: relative;
      h1
         color: #283848;
         font-size: 1.56rem;
         margin-bottom: 39px;
      form
         display: flex;
         flex-direction: column;
         label
            font-size: 0.875rem;
            font-weight: 550;
            color: #4E657B;
            margin-bottom: 5px; 
         input
            border-radius: 5px;
            border: 2px solid #BFDAEB;
            outline: none;
            padding: 16px 0px 16px 14px;
            font-size: 0.93rem;
            font-weight: 550;
            margin-bottom: 15px;
            &:focus
               border: 2px solid #2693FF;
         textarea
            border-radius: 5px;
            border: 2px solid #BFDAEB;
            padding: 26px 0px 0px 18px;
            outline: none;
            font-size: 0.93rem;
            font-weight: 550;
            margin-bottom: 24px;
            &:focus
               border: 2px solid #2693FF;
         
         .radio-btn
            display: flex;
            justify-content: space-between;
            .radio-select
               display: flex;
               gap: 9px;
            .submit
               a
                  color: #ffffff;
                  background-color: #16D08D;
                  font-size: 1rem;
                  font-weight: 550;
                  border: none;
                  border-radius: 4px;
                  padding: 14px 21px;
                  cursor: pointer;
                  transition: 0.2s;
                  text-decoration: none;
                  &:active
                     background-color: #11a16d;
   .sair
      position: absolute;
      top: 0;
      right: 0;
      
      button
         cursor pointer
         background: none;
         border: none;
         &:hover
            color: #FF4874;

         i
            font-size: 20px;
            padding: 0px 4px;
           
                     
               