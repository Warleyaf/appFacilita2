#header
   width: 106px;
   height: 100vh;
   background: #2693FF;

   .navleft 
      text-align: center;
      height: 100%;

      img
         margin-top: 14px; 

      ul
         display: flex;
         flex-direction: column;
         align-items: center;
         justify-content: center;
         height: calc(100% - 220px);
         li
            list-style: none;
            width: 100%;
            text-align: center;
            height: 83px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.4s;
            border: 0.8px solid #46A3FF;
            &:hover 
               background-color: #1182F2;
               
            a
               padding: 20px;
               display: flex;
               flex-direction: column;
               text-decoration: none;
               align-items: center;
               color: #FFFFFF;
               
               i
                  font-size: 2rem;
                  margin-bottom: 7px;
               span
                  font-size: 0.75rem;
                  font-weight: bold;
