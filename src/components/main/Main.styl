main
   position: relative;
   width: 100vw;
   height: 100%;
   display: flex;
   justify-content: center;
   background:#e9f4fb;

   .main-container
      margin-top: 118px;
      width: 633px;
      display: flex;
      flex-direction: column;
      
      .cabecalho
         margin-bottom: 30px;
         strong
            color: #283848;
            font-size: 1.62rem;
         p
            font-size: 1.06rem;
            color: #77899E;
            span
               color: #2693FF;
            span
               &:last-child
                  text-decoration: underline;

      .search
         margin-bottom: 30px;
         width: 100%;
         display: flex;
         border: 2px solid #BFDAEB;
         border-radius: 5px;
         background:#e9f4fb;
         
         input
            background:#e9f4fb;
            width: 100%;
            padding: 17px 0px 17px 19px;
            border-radius: 5px;
            outline: none;
            border: none;
            font-size: 1.06rem;
            font-weight: 550;
            color: #A6C1D2;
         button
            background:#e9f4fb;
            border-radius: 5px;
            padding: 13px 11px 13px 0px;
            outline: none;
            border: none;
            cursor: pointer;
            i
               font-size: 1.56rem;
               color: #AECBDE;
      .list-todo 
         ul 
            li 
               height: 4rem;
               padding-left: 0.87rem; 
               border-radius: 5px;
               box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.1);
               display: flex;
               align-items: center;
               justify-content: space-between;
               width: 100%;
               background-color: #ffffff;
               margin-bottom: 0.43rem;
               position: relative;

               .btn-checked 
                  display: flex;
                  align-items: center;
                  gap: 0.80rem;

                  input[type="checkbox"]
                     appearance: none;
                     -webkit-appearance: none;
                     height: 32px
                     width: 33px;
                     background-color: #d5d5d5;
                     border-radius: 5px;
                     cursor: pointer;
                     display: flex;
                     align-items: center;
                     justify-content: center;
                  
                  label
                     font-size: 0.93rem;
                     font-weight: 500;
                     

                  input[type="checkbox"]
                     &:after
                        content: "\f00c";
                        font-size: 20px;
                        font-family: "Font Awesome 5 Free";
                        font-weight: 550;
                        color: white;
                        display: none;
                  
                  input[type="checkbox"]
                     &:hover
                        background-color: #a5a5a5a5;
                  
                  input[type="checkbox"]
                     &:checked
                        background-color: #5bcd3e;
                  
                  input[type="checkbox"]
                     &:checked
                        &:after
                           display: block;

            .prioridade-option
                  display: flex;
                  gap: 23px;
                  span
                     display: block;
                     padding: 4px 9px;
                     border-radius: 40px;
                     font-size: 0.68rem;
                     color: #ffffff;
                     font-weight: bold;
                     background-color: #FF2E79;
                  button
                     background:none;
                     padding: 0px 12px;
                     border: none;
                     color: #9CAEC1;
                     cursor: pointer;
                     font-size: 1.2rem;

            .option
               display: none;
               z-index: 120;
               position: absolute;
               right: 9px;
               top: 14px;
               border-radius: 5px;
               box-shadow: 0px 1px 4px 1px rgba(0,0,0,0.15);
               width: 109px;
               height: 74px;
            .active
               display: flex;
                  
               padding: 10px 0px 10px 16px;
               background-color: #ffffff;
               .delete-edit
                  display: flex;
                  flex-direction: column;
                  gap: 15px;
                  align-items: center;
                  justify-content: center;
                  a
                     color: #5D7893;
                     text-decoration: none;
                     font-weight: 550;
               .btn-edit-delete
                  margin-left: 15px;
                  height: 20px;
                  padding: 10px;
                  display: flex;
                  align-items: center;
                  cursor: pointer;
                  outline: none;
                  border: none;
                  background: none;
                  &:hover
                     color: #2693FF;
