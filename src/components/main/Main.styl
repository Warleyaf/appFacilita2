main
   position: relative;
   width: 100vw;
   height: 100%;
   display: flex;
   justify-content: center;
   background:#e9f4fb;

   .main-container
      margin-top: 118px;
      width: 633px;
      display: flex;
      flex-direction: column;
      
      .cabecalho
         margin-bottom: 30px;
         strong
            color: #283848;
            font-size: 1.62rem;
         p
            font-size: 1.06rem;
            color: #77899E;
            span
               color: #2693FF;
            span
               &:last-child
                  text-decoration: underline;

      .search
         margin-bottom: 30px;
         width: 100%;
         display: flex;
         border: 2px solid #BFDAEB;
         border-radius: 5px;
         background:#e9f4fb;
         
         input
            background:#e9f4fb;
            width: 100%;
            padding: 17px 0px 17px 19px;
            border-radius: 5px;
            outline: none;
            border: none;
            font-size: 1.06rem;
            font-weight: 550;
            color: #A6C1D2;
         button
            background:#e9f4fb;
            border-radius: 5px;
            padding: 13px 11px 13px 0px;
            outline: none;
            border: none;
            cursor: pointer;
            i
               font-size: 1.56rem;
               color: #AECBDE;
   #btn-addTask
      position: absolute;
      bottom: 20px;
      right: 30px;
      .addTaskbtn
         display: flex;
         align-items: center;
         justify-content: center;
         padding: 14px 23px;
         border-radius: 50%;
         font-size: 32px;
         border: none;
         color: #FFFFFF;
         cursor: pointer;
         background-color: #1AD18F;
         transition: 0.3s;
